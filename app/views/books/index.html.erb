<p id="notice"><%= notice %></p>

<h1 class="m-2">Mi Biblioteca</h1>
<br>
<div class="container">

<%= search_form_for @q do |f| %>
  <%= f.label :status_cont, "Estado del Libro" %>
  <%= f.select :status_cont, options_for_select(Book.statuses, @q.status),{},{class: "form-control-sm"} %>
  <%= f.submit "Filtrar", class: "btn btn-outline-dark btn-sm"%>
<% end %>
</div>

<table class="table table-stripped mt-3">
  <thead class="table-light">
    <tr>
      <th><%= sort_link(@q, :title, 'Título') %></th>
      <th>Autor</th>
      <th>Estado</th>
      <th>Solicitante</th>
      <th>Fecha Préstamo</th>
      <th>Fecha Retorno</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.status %></td>
        <td><%= book.borrower %></td>
        <td><%= book.borrowed %></td>
        <td><%= book.returned %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: '¿Eliminar Libro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
